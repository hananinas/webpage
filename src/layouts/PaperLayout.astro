---
import Layout from "@layouts/Layout.astro";
import type { PaperItem } from "@components/papers/Papers";

export interface Props {
  paper: PaperItem;
}
const { paper } = Astro.props;
---

<Layout
  title={`${paper.title} | AITU`}
  headerTitle={paper.title as string}
  description={paper.abstract as string}
  ogImage={paper.image_src as string}
>
  <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="p-4">
      <img
        class="h-48 w-full object-cover"
        src={paper.image_src}
        alt={paper.title}
      />
      <h1 class="text-xl font-semibold mb-2">Title: {paper.title}</h1>
      <p class="text-gray-700 mb-4">Author: {paper.author}</p>
      <p class="text-gray-700 mb-4">Abstract: {paper.abstract}</p>
      <p class="text-gray-700 mb-4">Category: {paper.category}</p>
      <a
        href="https://arxiv.org/abs/1706.03762"
        target="_blank"
        rel="noopener noreferrer"
        class="text-blue-600 underline"
      >
        Read More
      </a>
    </div>
  </div>
</Layout>
